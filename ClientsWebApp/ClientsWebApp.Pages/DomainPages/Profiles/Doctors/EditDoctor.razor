@page "/doctors/edit"
@attribute [Authorize(Roles = "Doctor")]
@inherits CancellableComponent

<div>
    <p class="text-danger">@ErrorMessage</p>
</div>
@if (Data == null)
{
    <Loading />
}
else
{
    <EditForm Model="@Data" OnValidSubmit="EditAsync" class="form">
        <FluentValidationValidator DisableAssemblyScanning=true />
        <ValidationSummary />
        <div class="row">
            <div class="col p-2">
                <FormInputText Label="Имя" Id="firstName" @bind-Value="@Data.FirstName" />
                <FormInputText Label="Фамилия" Id="lastName" @bind-Value="@Data.LastName" />
                <FormInputText Label="Отчество" Id="middleName" @bind-Value="@Data.MiddleName" />
                <FormInputNumber Label="Старт карьеры" Id="careerStartYear" @bind-Value="@Data.CareerStartYear" />
                <FormInputSelect Label="Офис" Id="office" @bind-Value="Data.OfficeId" Values="Offices"
                             GetLabelHandler="@(x => x.Address)" GetValueHandler="@(x => x.Id)" />
                <FormInputSelect Label="Специализация" Id="specialization" @bind-Value="Data.Specialization"
                             Values="Specializations" GetLabelHandler="@(x => x.Name)" GetValueHandler="@(x => x.Name)" />
                <FormInputDate Label="День рождения" Id="birthDay" @bind-Value="@Data.BirthDay" />
                <SelectImage Title="Аватарка" @bind-Value="@Data.Picture" SelectedImageData="OldPicture" />
            </div>
        </div>
        <div class="row">
            <div class="col m-3 w-100">
                <FormSubmitButton @ref="@SubmitButton" ButtonValue="Save Changes" />
            </div>
            <div class="col">
                <DobleQuestionButton OnSuccessAnswerClicked="@Cancel" PreviewButtonValue="Cancel"
                                 QuestionLabel="Do you really want to cancel? Changes will not be saved." />
            </div>
        </div>
    </EditForm>
}