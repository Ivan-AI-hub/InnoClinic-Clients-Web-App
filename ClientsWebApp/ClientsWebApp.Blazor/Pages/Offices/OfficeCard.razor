@inject NavigationManager navigationManager
@inherits CancellableComponent

<div class="row mb-3" @onclick="NavigateToInfoPage">
    <div class="btn btn-info text-start">
        <div class="row">
            @if (Office != null)
            {
                <div class="col">
                    <div>@_localizer.GetString(LocalizationType.Address): @Office.Address</div>
                    @_localizer.GetString(LocalizationType.Status): <input type="radio" checked="@Office.Status" class="disabled" />
                </div>
                <div class="col">
                    <div>@_localizer.GetString(LocalizationType.OfficeNumber): @Office.OfficeNumber</div>
                    <div>@_localizer.GetString(LocalizationType.PhoneNumber): @Office.PhoneNumber</div>
                </div>
                @if (ChildContent != null)
                {
                    @ChildContent
                }

            }
        </div>
    </div>
</div>


@code {
    [Parameter] public Office Office { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }

    private void NavigateToInfoPage()
    {
        navigationManager.NavigateTo($"/offices/{Office.Id}");
    }
}