@inject NavigationManager navigationManager
@inherits CancellableComponent

<div class="row mb-3" @onclick="NavigateToInfoPage">
    <div class="btn btn-info text-start">
        <div class="row">
            @if (Office != null)
            {
                <div class="col">
                    <div>Address: @Office.Address</div>
                    Status: <input type="radio" checked="@Office.Status" class="disabled" />
                </div>
                <div class="col">
                    <div>Office number: @Office.OfficeNumber</div>
                    <div>Phone number: @Office.PhoneNumber</div>
                </div>
                @if (ChildContent != null)
                {
                    @ChildContent
                }

            }
        </div>
    </div>
</div>


@code {
    [Parameter] public Office Office { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }

    private void NavigateToInfoPage()
    {
        navigationManager.NavigateTo($"/offices/{Office.Id}");
    }
}