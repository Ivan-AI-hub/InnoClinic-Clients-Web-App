@inject NavigationManager navigationManager
@inherits CancellableComponent

<div class="row mb-3 align-items-center bg-secondary" @onclick="NavigateToInfoPage">
    @if (Office != null)
    {
        <div class="col">
            <div>@Office.Address</div>
            <div>@Office.OfficeNumber</div>
            <div>@Office.PhoneNumber</div>
            <input type="radio" checked="@Office.Status" class="disabled" />
        </div>
        @if (ChildContent != null)
        {
            @ChildContent
        }

    }
</div>


@code {
    [Parameter] public Office Office { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }

    private void NavigateToInfoPage()
    {
        navigationManager.NavigateTo($"/offices/{Office.Id}");
    }
}