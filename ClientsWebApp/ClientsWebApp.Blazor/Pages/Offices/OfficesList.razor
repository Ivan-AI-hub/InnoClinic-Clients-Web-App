@page "/offices"
@inherits CancellableComponent
@attribute [Authorize(Roles = "Admin")]

<div class="row">
    <MudButton OnClick="ToCreatePage" Color="Color.Primary" Variant="Variant.Filled">@_localizer.GetString(LocalizationType.CreateOfficeButtonValue)</MudButton>
    <div class="col-sm">
        @if (Offices != null)
        {
            <PageSwitcher OnNextPageClicked="@SetNextPage" OnPreviousPageClicked="@SetPreviousPage"
                      GetStatus="@GetPageStatus" />
            @foreach (var office in Offices)
            {
                <OfficeCard Office="office" />
            }
        }
        else
        {
            <Loading />
        }
    </div>

</div>
