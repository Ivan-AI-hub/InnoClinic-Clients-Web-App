@page "/doctors/home"
@inherits CancellableComponent
@attribute [Authorize(Roles = "Doctor")]
@if (!IsLoading)
{
    <DoctorCard Doctor="@Doctor" />
    <Row>
        <Left>
            <input type="button" class="btn btn-outline-info" value="Edit" @onclick="@NavigateToEditPage" />
        </Left>
        <Center>
            <ChangeDoctorStatus Doctor="@Doctor" OnStatusChanged="@Reload" />
        </Center>
        <Right>
            <input type="button" class="btn btn-outline-warning" value="Schedule" @onclick="@NavigateToSchedulePage" />
        </Right>
    </Row>

}
else
{
    <Loading />
}