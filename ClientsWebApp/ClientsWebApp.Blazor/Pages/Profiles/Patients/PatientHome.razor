@page "/patients/home"
@attribute [Authorize(Roles = "Patient")]
@inherits CancellableComponent

@if (Patient != null)
{
    <PatientCard Patient="@Patient" />
    <button @onclick="NavigateToEditPage" class="btn btn-info">@_localizer.GetString(LocalizationType.EditButtonValue)</button>
    <button @onclick="NavigateToDeletePage" class="btn btn-danger">@_localizer.GetString(LocalizationType.DeleteButtonValue)</button>
}
else
{
    <Loading />
}