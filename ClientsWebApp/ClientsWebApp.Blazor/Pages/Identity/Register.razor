@page "/register"
@inherits CancellableComponent
<div>
    <p class="text-danger">@ErrorMessage</p>
</div>
<EditForm Model="@Data" OnValidSubmit="RegisterAsync" class="form">
    <FluentValidationValidator DisableAssemblyScanning=@true />
    <ValidationSummary />
    <div class="row">
        <div class="col bg-success bg-opacity-10 p-2">
            <h2>Данные</h2>
            <FormInputText Label="Почта" Id="email" @bind-Value="@Data.Email"/>
        </div>
        <div class="col bg-danger bg-opacity-10 p-2">
            <h2>Пароль</h2>
            <FormInputText Label="Пароль" Id="password" type="password" @bind-Value="@Data.Password" />
            <FormInputText Label="Повторите пароль" Id="rePassword" type="password" @bind-Value="@Data.RePassword" />
        </div>
    </div>
    <input class="btn btn-primary" type="submit" />
</EditForm>