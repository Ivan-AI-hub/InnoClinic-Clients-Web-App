@page "/login"
@inherits CancellableComponent

<PageTitle>Login</PageTitle>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <p class="text-danger">@ErrorMessage</p>
        <EditForm Model="@LoginData" OnValidSubmit="LoginAsync">
            <FluentValidationValidator DisableAssemblyScanning=@true />
            <ValidationSummary />
            <FormInputText Label=@_localizer.GetString(LocalizationType.Email) Id="email" @bind-Value="@LoginData.Email" />
            <FormInputText Label=@_localizer.GetString(LocalizationType.Password) Id="password" type="password" @bind-Value="@LoginData.Password" />
            <FormSubmitButton @ref="@SubmitButton" ButtonValue=@_localizer.GetString(LocalizationType.SignInTitle) />
        </EditForm>
    </div>
</div>
