@page "/appointments/{AppointmentId:guid}/result/create"
@inherits CancellableComponent
@attribute [Authorize(Roles = "Doctor")]

@if (Data != null)
{
    <EditForm Model="@Data" OnValidSubmit="CreateAsync" class="form">
        <FluentValidationValidator DisableAssemblyScanning=true />
        <ValidationSummary />
        <div class="row">
            <div class="col bg-success bg-opacity-10 p-2">
                <h2>Данные</h2>
                @if (Appointment != null)
                {
                    <p>Дата @Appointment.Date</p>
                    <p>Пациент @Appointment.Patient.GetFullName()</p>
                    <p>Доктор @Appointment.Doctor.GetFullName()</p>
                    <p>Сервис @Appointment.Service.Name</p>
                }
                else
                {
                    <Loading />
                }
                <FormInputText Label="Жалобы" Id="Name" @bind-Value="@Data.Complaints" />
                <FormInputText Label="Заключение" Id="Name" @bind-Value="@Data.Conclusion" />
                <FormInputText Label="Рекомендации" Id="Name" @bind-Value="@Data.Recomendations" />
            </div>
        </div>
        <input class="btn btn-primary" type="submit" value="Создать" />
    </EditForm>
}
else
{
    <Loading />
}