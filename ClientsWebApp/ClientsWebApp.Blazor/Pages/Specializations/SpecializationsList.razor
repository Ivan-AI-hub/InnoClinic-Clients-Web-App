@page "/specializations"
@attribute [Authorize(Roles = "Admin")]
@inherits CancellableComponent

<div class="row">
    <button class="btn btn-primary" @onclick="ToCreatePage">@_localizer.GetString(LocalizationType.CreateSpecializationButtonValue)</button>
    <div class="col-sm">
        @if (Specializations != null)
        {
            <PageSwitcher OnNextPageClicked="@SetNextPage" OnPreviousPageClicked="@SetPreviousPage"
                      GetStatus="@GetPageStatus" />
            @foreach (var specialization in Specializations)
            {
                <SpecializationCard Specialization="specialization" />
            }
        }
        else
        {
            <Loading />
        }
    </div>

</div>
