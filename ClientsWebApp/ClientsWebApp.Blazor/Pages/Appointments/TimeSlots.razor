@inherits CancellableComponent

<EditForm Model="@Data" class="form">
    <div class="row">
        <div class="col p-2">
            <FormInputDate Label="Дата" Id="Date" @bind-Value="@Data.Date" @oninput="@DateWasSelected" />
        </div>
    </div>
</EditForm>

<table class="table text-center">
    <thead>
    <th>Минута</th>
        @for (int i = 1; i < 24; i++)
        {
        <th scope="col">@i час</th>
        }
    </thead>
    <tbody>
        @if (isTableReloading)
        {
            <Loading />
        }
        else
        {
            @for (int j = 0; j < 60; j += 10)
            {
                <tr>
                    <th scope="row">@j</th>

                    @for (int i = 1; i < 24; i++)
                    {

                        TimeOnly time = new TimeOnly(i, j);
                        if (Data.StartTime <= time && Data.EndTime >= time && !Times[time])
                        {

                            <td>
                                <input type="button" class="w-100 btn btn-danger" value="@j" />
                            </td>
                            Data.StartTime = default;
                            Data.EndTime = default;
                        }
                        else if (Data.StartTime <= time && Data.EndTime >= time && Times[time])
                        {
                            <td>
                                <input type="button" class="w-100 btn btn-success" @onclick="@(() => SelectTimeSlot(time))" value="@j" />
                            </td>
                        }
                        else if (Times[time])
                        {
                            <td>
                                <input type="button" class="w-100 btn btn-info" @onclick="@(() => SelectTimeSlot(time))" value="@j" />
                            </td>
                        }
                        else
                        {
                            <td>
                                <input type="button" class="w-100 btn btn-danger" value="@j" />
                            </td>
                        }
                    }
                </tr>
            }

        }
    </tbody>
</table>

