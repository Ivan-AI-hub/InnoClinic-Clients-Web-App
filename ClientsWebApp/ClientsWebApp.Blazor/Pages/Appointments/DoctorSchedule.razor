@page "/doctors/{DoctorId:guid}/schedule"
@using ClientsWebApp.Blazor.Pages.Identity
@using ClientsWebApp.Domain;
@inherits CancellableComponent
@attribute [Authorize(Roles = "Doctor")]


<div class="row">
    <div class="col-sm-3">
        <EditForm Model="FiltrationModel" OnSubmit="AppointmentsUpdateAsync">
            <div class="container">
                <div class="col ">
                    <FormInputDate Label="Дата" Id="firstName" @bind-Value="FiltrationModel.Date" />
                </div>
                <FormSubmitButton @ref="@SubmitButton" ButtonValue="Search" />
            </div>
        </EditForm>
    </div>
    <div class="col-sm">
        @if (Appointments != null)
        {
            <PageSwitcher OnNextPageClicked="@SetNextPage" OnPreviousPageClicked="@SetPreviousPage"
                      GetStatus="@GetPageStatus" />
            @foreach (var appointment in Appointments)
            {
                <AppointmentCard Appointment="appointment">
                    <div class="col">
                        @if (!appointment.IsApproved)
                        {
                            <div class=" m-1">
                                <ChangeAppointmentDate Appointment="appointment" OnDateChanged="AppointmentsUpdateAsync" />
                            </div>
                            <div class=" m-1">
                                <ApproveAppointment AppointmentId="appointment.Id"
                                        OnAppointmentApproved="AppointmentsUpdateAsync" />
                            </div>
                        }
                        @if (appointment.IsApproved)
                        {
                            <ResultInfo AppointmentId="@appointment.Id" />
                        }
                    </div>
                </AppointmentCard>
            }
        }
        else
        {
            <Loading />
        }
    </div>

</div>
