@typeparam T
@attribute [CascadingTypeParameter(nameof(T))]

<AddInfoButton Label="@Label" OnClick="OnAddButtonClick" Text="@ButtonText" Hidden=ReadOnly />

@if (Items.Any())
{
    <MudDataGrid Bordered ReadOnly=ReadOnly EditMode=DataGridEditMode.Cell Items=Items Columns="Columns" />
}

@code {

    [Parameter]
    [EditorRequired]
    public IEnumerable<T> Items { get; set; }

    [Parameter]
    [EditorRequired]
    public RenderFragment Columns { get; set; }

    [Parameter]
    public string Label { get; set; }


    [Parameter]
    public string ButtonText { get; set; }

    [Parameter]
    public EventCallback OnAddButtonClick { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; } = false;
}