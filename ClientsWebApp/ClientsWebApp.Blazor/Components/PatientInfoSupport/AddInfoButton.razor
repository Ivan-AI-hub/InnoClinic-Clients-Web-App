
<MudGrid Justify="Justify.SpaceAround" Class="mt-4 mb-4 align-center">
    <MudItem xs="6">
        <MudText>@Label</MudText>
    </MudItem>

    <MudItem xs="6">
        @if (!Hidden)
        {
            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="OnClick" FullWidth Disabled=Disabled>
                @Text
            </MudButton>
        }

    </MudItem>
</MudGrid>
@code {
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public string Label { get; set; } = "TestXX";
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public bool Hidden { get; set; } = false;
}
